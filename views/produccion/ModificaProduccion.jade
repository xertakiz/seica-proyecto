extends ../templates/default


block content

  br
  br
  div(class=["ui", "container", "grid", "stackable", "animated fadeIn"])
    div(class=["ten", "wide", "column"])
      
      h2(class=['ui', 'header', 'blue', "dividing"])= "Modificar Produccion"
      div(class=['ui','field'])
        a(class="btn btn-primary", href="http://localhost:3000/users/produccion" role="button")='Regresar'
        a(class="btn btn-primary" href="http://localhost:3000/users/panel" role="button")='Menu Principal'
      br
      br
      div(class='form-modificaproduccion')
        form(class=['ui','form'] action='http://localhost:3000/users/produccion/editarproduccion' method='post')
          div(class=['ui','four','fields'])
                div(class=['ui','field'])
                  label(for='ticketpro')='Ticket'
                  input(type='text' name='ticketpro' placeholder='Ticket' readonly="readonly" value=produccion[0].ticketpro maxlength='4')
                div(class=['ui','field'])
                  label(for='modelo')='Modelo'
                  select(name="modelo"  onChange="MM_jumpMenu('parent',this,0)")
                    option(value=produccion[0].modelo)=value=produccion[0].modelo
                    option(value="905P")='905P'
                    option(value="906P")='906P'
                    option(value="908P")='908P'
                div(class=['ui','field'])
                  label(for='tcalzado')='Tipo de Calzado'
                  select(name="tcalzado" onChange="MM_jumpMenu('parent',this,0)")
                    option(value=value=produccion[0].tcalzado)=value=produccion[0].tcalzado
                    option(value="DAMA" )='Dama'
                    option(value="NIÑO")='Niño'
                    option(value="CABALLERO")='Caballero'
                div(class=['ui','field'])
                  label(for='fechacrea')='Fecha de Creacion'
                  input(type='text' readonly="readonly" value=produccion[0].fechacrea name='fechacrea' placeholder='Fecha de Creacion' maxlength='30')
          div(class=['ui','three','fields'])
                div(class=['ui','field'])
                  label(for='color1' data-inverted='' data-tooltip='Color Principal' data-position='top center')='Color 1'
                  input(type='text' name='color1'  readonly="readonly" value=produccion[0].color1)
                div(class=['ui','field'])
                  label(for='color2' data-inverted='' data-tooltip='Adornos' data-position='top center')='Color 2'
                  input(type='text' name='color2'  readonly="readonly" value=produccion[0].color2)
           div(class=['ui','three','fields'])
                div(class=['ui','field'])
                  label(for='pares')='Pares'
                  select(name="pares" onChange="MM_jumpMenu('parent',this,0)")
                    option(value=value=produccion[0].pares)=produccion[0].pares
                    option(value="15",par1)='15 Pares'
                    option(value="30")='30 Pares'
                    option(value="45")='45 Pares'

                div(class=['ui','field'])
                  label(for='notas' data-inverted='' data-tooltip='Grupo de Zapatos con Numeracion Estandar' data-position='top center')='Notas'
                  select(name="notas" onChange="MM_jumpMenu('parent',this,0)")
                    option(value=produccion[0].notas)=produccion[0].pares
                    option(value="1")='1 Nota'
                    option(value="2")='2 Notas'
                    option(value="3")='3 Notas'

                div(class=['ui','field'])
                  label(for='cliente')='Cliente'
                  select(name="cliente" onChange="MM_jumpMenu('parent',this,0)")
                    option(value=value=produccion[0].cliente)=value=produccion[0].cliente
                    //each clientes in cliente
                      option(value=clientes.cliente)=clientes.cliente

          div(class=['ui', 'hidden','four','fields'])
            div(class=['ui','field'])
                div(class=["ui", "left", "floated", "compact", "segment"])
                  div(class=["ui", "fitted", "toggle"])
                    label(for='cortada')='Cortada'
                    select(name="cortada" onChange="MM_jumpMenu('parent',this,0)")
                      if value=produccion[0].cortada == 1
                        option(value=produccion[0].cortada)='Si'
                        option(value='')=''
                      else
                        option(value='')=''
                        option(value=1)='Si'
                  br
                  div(class=['ui','field'])
                    label(for='fechacortada')='Fecha Cortada'
                    if value=produccion[0].fechacort != "0000-00-00"
                      input(type='text' readonly="readonly" value=produccion[0].fechacort name='fechacortada')
                    else
                      input(type='text' readonly="readonly" value='' name='fechacortada' placeholder='Fecha Cortada')

            div(class=['ui','field'])
                div(class=["ui", "left", "floated", "compact", "segment"])
                  div(class=["ui", "fitted", "toggle"])
                    label(for='marcada')='Marcada'
                    select(name="marcada" onChange="MM_jumpMenu('parent',this,0)")
                      if value=produccion[0].marcada == 1
                        option(value=produccion[0].marcada)='Si'
                        option(value='')=''
                      else
                        option(value='')=''
                        option(value=1)='Si'
                  br
                  div(class=['ui','field'])
                    label(for='fechamarcada')='Fecha Marcada'
                    if value=produccion[0].fechamarca != "0000-00-00"
                      input(type='text' readonly="readonly" value=produccion[0].fechamarca name='fechamarcada')
                    else
                      input(type='text' readonly="readonly" value='' name='fechamarcada' placeholder='Fecha Marcada')

            div(class=['ui','field'])
                div(class=["ui", "left", "floated", "compact", "segment"])
                  div(class=["ui", "fitted", "toggle"])
                    label(for='costura')='Costura'
                    select(name="costura" onChange="MM_jumpMenu('parent',this,0)")
                      if value=produccion[0].costura == 1
                        option(value=produccion[0].costura)='Si'
                        option(value='')=''
                      else
                        option(value='')=''
                        option(value=1)='Si'
                  br
                  div(class=['ui','field'])
                    label(for='fechacostura')='Fecha Costura'
                    if value=produccion[0].fechacost != "0000-00-00"
                      input(type='text' readonly="readonly" value=produccion[0].fechacost name='fechacostura')
                    else
                      input(type='text' readonly="readonly" value='' name='fechacostura' placeholder='Fecha Costura')

            div(class=['ui','field'])
                div(class=["ui", "left", "floated", "compact", "segment"])
                  div(class=["ui", "fitted", "toggle"])
                    label(for='montura')='Montura'
                    select(name="montura" onChange="MM_jumpMenu('parent',this,0)")
                      if value=produccion[0].montura == 1
                        option(value=produccion[0].montura)='Si'
                        option(value='')=''
                      else
                        option(value='')=''
                        option(value=1)='Si'
                  br
                  div(class=['ui','field'])
                    label(for='fechamontura')='Fecha Montura'
                    if value=produccion[0].fechamon != "0000-00-00"
                      input(type='text' readonly="readonly" value=produccion[0].fechamon name='fechamontura')
                    else
                      input(type='text' readonly="readonly" value='' name='fechamontura' placeholder='Fecha Montura')

          div(class=['ui','hidden','four','fields'])
            div(class=['ui','field'])
                div(class=["ui", "left", "floated", "compact", "segment"])
                  div(class=["ui", "fitted", "toggle"])
                    label(for='soleteada')='Soleteada'
                    select(name="soleteada" onChange="MM_jumpMenu('parent',this,0)")
                      if value=produccion[0].soleteada == 1
                        option(value=produccion[0].soleteada)='Si'
                        option(value='')=''
                      else
                        option(value='')=''
                        option(value=1)='Si'
                  br
                  div(class=['ui','field'])
                    label(for='fechasoleteada')='Fecha Soleteada'
                    if value=produccion[0].fechasole != "0000-00-00"
                      input(type='text' readonly="readonly" value=produccion[0].fechasole name='fechasoleteada')
                    else
                      input(type='text' readonly="readonly" value='' name='fechasoleteada' placeholder='Fecha Soleteada')

            div(class=['ui','field'])
                div(class=["ui", "left", "floated", "compact", "segment"])
                  div(class=["ui", "fitted", "toggle"])
                    label(for='encajada')='Encajada'
                    select(name="encajada" onChange="MM_jumpMenu('parent',this,0)")
                      if value=produccion[0].encajada == 1
                        option(value=produccion[0].encajada)='Si'
                        option(value='')=''
                      else
                        option(value='')=''
                        option(value=1)='Si'
                  br
                  div(class=['ui','field'])
                    label(for='fechaencajada')='Fecha Encajada'
                    if value=produccion[0].fechaenca != "0000-00-00"
                      input(type='text' readonly="readonly" value=produccion[0].fechaenca name='fechaencajada')
                    else
                      input(type='text' readonly="readonly" value='' name='fechaencajada' placeholder='Fecha Encajada')

            div(class=['ui','field'])
              div(class=["ui", "left", "floated", "compact", "segment"])
                div(class=["ui", "fitted", "toggle"])
                    label(for='completado')='Completado'
                    select(name="completado" onChange="MM_jumpMenu('parent',this,0)")
                      if value=produccion[0].completado == 1
                        option(value=produccion[0].completado)='Si'
                        option(value='')=''
                      else
                        option(value='')=''
                        option(value=1)='Si'
                br
                div(class=['ui','field'])
                  label(for='fechacomp')='Fecha Completado'
                    if value=produccion[0].fechacomp != "0000-00-00"
                      input(type='text' readonly="readonly" value=produccion[0].fechacomp name='fecha Completado')
                    else
                      input(type='text' readonly="readonly" value='' name='fechacomp' placeholder='Fecha Completado')
          
          button(class=['ui','button','submit','blue'])= 'Modificar' 
          div(class=['ui','message','error'])
          
    script(src='/javascripts/validacionProduccion.js')

