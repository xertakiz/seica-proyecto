extends ../templates/default


block content
  br
  br
  div(class=["ui", "container", "grid", "stackable", "animated fadeIn"])
    div(class=["sixteen", "wide", "column"])
      h2(class=['ui', 'header', 'blue', "dividing"])= "Listado de Productos Terminados"
      div(class=['ui','field'])
        a(class="btn btn-primary" href="http://localhost:3000/users/terminado/nuevo" role="button")='Crear Productos Terminados'
        a(class="btn btn-primary" href="http://localhost:3000/users/panel" role="button")='Regresar'

      
      table(class=['ui','table', 'celled'] id='tbl-terminados')
        thead
          tr
            th= 'Ticket'
            th= 'Calzado'
            th= 'Modelo'
            th(data-tooltip='Primer Color (Pala, Ojetera y Talon), Segundo Color (Lengueta y Laterales), Tercer Color (Adornos)' data-position='top center')= 'Color'
            th= 'Notas y Zapatos Disponibles'
            th= 'Cliente'
            th= 'Fecha Terminada'
            th= 'Despachada'
            th= 'Acciones'
        tbody
          each producc in produccion
            tr
              td(id='ticketpro')= producc.ticketpro
              td= producc.tcalzado
              td= producc.modelo
              td
                p=producc.color1 +'/'+ producc.color2 +'/'+ producc.color3
              td= producc.pares +'/'+ producc.notas
              td= producc.cliente
              td= producc.fechacomp
              td= "Despachada si no"
              td
                  a(class=['ui button basic icon'] href='#' data-inverted=''
                  data-tooltip='Eliminar' data-position='top center' id='btn-eliminar')
                    i(class=['trash icon'])
                  a(class=['ui button basic icon'] href='http://localhost:3000/users/produccion/modificarproduccion/'+producc.ticketpro data-inverted=''
                  data-tooltip='Modificar' data-position='top center')
                    i(class=['edit icon'])

    script(src='/javascripts/produccion.js')
